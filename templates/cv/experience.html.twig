<section id="experience">
    <div class="container">
        <div class="white-divider"></div>
        <div class="heading">
            <h2 data-aos="zoom-in" data-aos-once="true">{{ sectionAttribute.experienceTitle }}</h2>
        </div>
        <ul class="timeline">
            {% for key, experience in experiences %}
                <li>
                    <div class="timeline-badge"><span><i class="fas fa-briefcase"></i></span></div>
                    <div {% if key is even %}data-aos="fade-up-right" class="timeline-panel-container-inverted js-screen"
                         {% else %}data-aos="fade-up-left" class="timeline-panel-container js-screen"
                            {% endif %}>
                        <div class="timeline-panel">
                            <div class="timeline-heading">
                                <h3>{{ experience.business }}</h3>
                                <h4>{{ experience.job }}</h4>
                                <p class="text-muted"><small><i class="far fa-clock"></i></small>{{ experience.date }}</p>
                            </div>
                            <div class="timeline-body">
                                <div>{{ experience.task|raw }}</div>
                            </div>
                            {% if experience.link %}
                                <div class="timeline-footer">
                                    <a href="{{ experience.link }}" target="_blank"><small><i class="fas fa-globe"></i></small>Site internet</a>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
</section>

<script type="text/javascript">
    // modifie l'attribut data-aos en fonction de la taille de la fenetre
        let widthDoc = document.body.clientWidth;
        const divs = document.getElementsByClassName('js-screen')
        for (div of divs) {
            if (widthDoc < 768) {
                div.setAttribute('data-aos', 'fade-up-right');
            }
        }
</script>
